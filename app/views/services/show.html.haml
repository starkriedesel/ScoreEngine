= hidden_field_tag 'service_id', @service.id
- last_log = @service.service_logs.order('created_at desc').first
- last_log_id = last_log.nil? ? 0 : last_log.id
= hidden_field_tag 'last_log_id', last_log_id

.row
  .small-3.columns
    .panel.services
      %h3= link_to "Team #{@service.team_name}", services_path+"#team#{@service.team_id}"
      %br
      - Service.where(team_id: @service.team_id).all.each do |s|
        .row
          = link_to s.name, s, class: 'button small-12 columns '+service_class(s), id: "service#{s.id}"

  .small-9.columns
    .row
      .small-12.columns
        .row
          .small-2.columns{style:'text-align: right;'}
            %h5 Uptime:
          .small-10.columns
            .progress.success.text#uptime
              .meter{style:"width:#{@service.up_time}%"}
                .text
                  = "#{@service.up_time}%"
    - if current_user_admin?
      .row
        %ul.button-group.even
          %li= link_to 'Edit', edit_service_path(@service), class:'button'
          - if @service.on
            %li= button_to 'Off', service_power_path(@service), class: 'button alert', confirm: 'Are you sure you want to POWER OF this service?'
          - else
            %li= button_to 'On', service_power_path(@service), class: 'button success', confirm: 'Are you sure you want to POWER ON this service?'
          %li= button_to 'Clear', clear_service_path(@service), class: 'button alert', confirm: 'Are you sure you want to CLEAR LOGS for this service?'

    - if @service.service_logs.count == 0
      .row
        .small-10.columns.small-offset-2
          %h3 No Logs

    - @service.service_logs.order('created_at desc').each do |log|
      #service_logs
        = render partial: 'service_log', locals: {log: log}
