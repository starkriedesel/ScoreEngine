.row
  .six.columns.offset-by-three.end.panel
    %h2 Sign Up
    = form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'formee'} do |f|
      .row
        .ten.columns.offset-by-one.end
          = f.label :username
          = f.text_field :username, autofocus: true
          - if resource.errors[:username].length > 0
            .alert-box.alert
              %ul
                - resource.errors[:username].each do |err_msg|
                  %li
                    = "Username #{err_msg}"
      .row
        .ten.columns.offset-by-one.end
          =f.label :password
          = f.password_field :password
          - if resource.errors[:password].length > 0
            .alert-box.alert
              %ul
                - resource.errors[:password].each do |err_msg|
                  %li
                    = "Password #{err_msg}"
      .row
        .ten.columns.offset-by-one.end
          =f.label :password_confirmation
          = f.password_field :password_confirmation
          - if resource.errors[:password_confirmation].length > 0
            .alert-box.alert
              %ul
                - resource.errors[:password_confirmation].each do |err_msg|
                  %li
                    = "Confirmation #{err_msg}"
      .row
        .ten.columns.offset-by-one.end
          .left
            = f.submit 'Sign Up'