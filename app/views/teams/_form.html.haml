.row
  = form_for @team, html: {class: 'formee'} do |f|
    = f.hidden_field :id

    %fieldset
      %legend Basic
      .six.columns
        = f.label :name do
          Name
          %em.formee-req *
        = f.text_field :name
        .hint-text
          Name of Team
        .form-error-text
          =# @team.errors[:name].first if @team.errors[:name].length > 0
          &nbsp;
      .six.columns
        = f.label :dns_server do
          DNS Server
        = f.text_field :dns_server
        .hint-text
          DNS server for resolving domains on services within team
        .form-error-text
          = @team.errors[:dns_server].first unless @team.errors[:dns_server].blank?
      .six.columns
        = f.label :domain do
          Domain
        = f.text_field :domain
        .hint-text
          Domain name for team services
        .form-error-text
          = @team.errors[:domain].first unless @team.errors[:domain].blank?

    .left
      = f.submit ((%w{new create}.include? params[:action]) ? 'Create' : 'Edit')
    .right
      = button_to_function 'Back', "window.location='#{teams_path}'"