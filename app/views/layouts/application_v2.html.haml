%html
  %head
    %meta{charset: 'utf-8'}
    %title= content_for?(:title) ? yield(:title) : 'Score Engine'
    :javascript
      var controllerName = '#{params[:controller]}';
      var actionName = '#{params[:action]}';
      var status_classes = {'-1': 'off', '0':'running', '1':'down', '2':'access', '3':'error'};
      var status_names = #{ServiceLog::STATUS.to_json};
    = stylesheet_link_tag :application_v2
    = csrf_meta_tags
    
  %body.skin-blue
    %header.header
      = link_to 'ScoreEngine v2', '/', class: 'logo'

      %nav.navbar.navbar-static-top(role="navigation")
        %a.navbar-btn.sidebar-toggle(href="#" data-toggle="offcanvas" role="button")
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        .navbar-right
          %ul.nav.navbar-nav
            %li.dropdown.messages-menu
              %a(href="#" class="dropdown-toggle" data-toggle="dropdown")
                = fa_icon(:envelope)
                %span.label.label-success 1
              %ul.dropdown-menu
                %li.header You have 1 message
                %li
                  %ul.menu
                    %li
                      %a(href="#")
                        .pull-left
                          = image_tag 'blue.png', class: 'img-circle'
                        %h4
                          Team Alpha
                          %small
                            = fa_icon('clock-o')
                            5 mins
                        %p RE: Inject #1
                %li.footer
                  = link_to 'View all messages', '#'
            %li.dropdown.notifications-menu
              %a(href="#" class="dropdown-toggle" data-toggle="dropdown")
                = fa_icon(:warning)
                %span.label.label-warning 10
              %ul.dropdown-menu
                %li.header You have 10 notifications
                %li
                  %ul.menu
                    %li
                      %a(href='#')
                        %i.warning.fa.fa-file
                        5 injects to be graded
                %li.footer
                  = link_to 'View all notifications', '#'
            -# %li.dropdown.tasks-menu
              %a(href="#" class="dropdown-toggle" data-toggle="dropdown")
                = fa_icon(:tasks)
                %span.label.label-danger 9
              %ul.dropdown-menu
                %li.header You have 9 tasks
                %li
                  %ul.menu
                    %li
                      %a(href='#')
                        %h3
                          CPU
                          %small.pull-right 20%
                        .progress.xs
                          .progress-bar.progress-bar-aqua(style="width:20%" rolw="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100")
                            %span.sr-only 20% Complete
                %li.footer
                  = link_to 'View all tasks', '#'
            %li.dropdown.user.user-menu
              %a(href='#' class='dropdown-toggle' data-toggle='dropdown')
                %i.ion-android-contact
                %span
                  = current_user.username
                  %i.caret
              %ul.dropdown-menu
                %li.user-header.bg-light-blue
                  = image_tag "#{current_user.color}.png", class:'img-circle', alt:'User Image'
                  %p
                    = "#{current_user.username} - #{current_user.color.capitalize} Team"
                    %small
                      - if current_user.team_id
                        = current_user.team.name
                      - else
                        Global User
                %li.user-body
                  .col-xs-4.text-center
                    = link_to 'Services', "#{services_path}#team#{current_user.team_id}Tab"
                  .col-xs-4.text-center
                    = link_to 'Messages', "#{team_messages_path}#inboxTab"
                  .col-xs-4.text-center
                    = link_to 'Tools', '#'
                %li.user-footer
                  .pull-left
                    = link_to 'Profile', edit_user_path(current_user), class: 'btn btn-default btn-flat'
                  .pull-right
                    = link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat'
    .wrapper.row-offcanvas.row-offcanvas-left
      %aside.left-side.sidebar-offcanvas
        %section.sidebar
          .user-panel
            .pull-left.image
              = image_tag "#{current_user.color}.png", class: 'img-circle', alt: 'User Image'
            .pull-left.info
              %p= "Hello, #{current_user.username}"
              = link_to fa_icon('circle', class:'text-success', text: 'Online'), '#"'
          %form.sidebar-form(action='#' method='get')
            .input-group
              %input.form-control(type='text' name='q' placeholder='Search...')
              %span.input-group-btn
                %button.btn.btn-flat#search-btn(type='submit' name='search')
                  = fa_icon(:search)
          %ul.sidebar-menu
            %li.active
              = link_to fa_icon(:dashboard, text: 'Dashboard'), '#'
            %li.treeview.active
              %a(href='#')
                = fa_icon(:cloud)
                %span Services
                = fa_icon('angle-left', class: 'pull-right')
              %ul#serviceMenu.treeview-menu(style="display:block")
      %aside.right-side
        %section.content-header
          %h1
            Dashboard
            / %small Control Panel
          %ol.breadcrumb
            %li= link_to fa_icon(:dashboard, text: 'Home'), '#'
            %li.active Dashboard
        %section.content
          .row
            = yield

  = javascript_include_tag :application_v2
  = javascript_include_tag :modernizr